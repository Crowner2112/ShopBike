                                    <a class="left__link" href="#">Thêm đơn</a>
                                    <a class="left__link" href="#">Ds đơn</a>
                                </div>
                            </li>
                            <li class="left__menuItem">
                                <a href="@Url.Action("Login", "Home")" class="left__title"><img src="~/Areas/Admin/assets/icon-logout.svg" alt="">Đăng Xuất</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="right">
                    <div class="right__content">
                        <div class="right__title">Bảng điều khiển</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Areas/Admin/assets/js/main.js"></script>
