                            <p class="left__name">-- Admin --</p>
                        </div>
                        <ul class="left__menu">
                            <li class="left__menuItem">
                                <div class="left__title"><img src="~/Areas/Admin/assets/icon-tag.svg" alt="">Sản Phẩm<img class="left__iconDown" src="~/Areas/Admin/assets/arrow-down.svg" alt=""></div>
